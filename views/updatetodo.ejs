<!-- Includes Header -->
<%- include('includes/header')%>
<!-- Includes Header -->

<!-- Main Site -->
<main id="site-main">
      <div class="container">
        <div class="box-nav d-flex justify-between text-center">
          <div class="filter">
              <a href="/todopage"><i class="fas fa-angle-double-left"></i>All Todos</a>
          </div>
        </div>

        <div class="form-title text-center">
             <h2 class="text-dark">Update User</h2>
             <span class="text-light">Use the below form to update the user account</span>
        </div>
       
        <!-- Includes update user form -->
          <!-- Form handling -->
  <form method="PUT" id="update_user">
      <div class="new_user">
            <div class="form-group">
                  <label for="name" class="text-light">Title</label>
                  <input type="hidden" name="id" id="userId" value="<%= todo.id %>">
                  <input type="text" name="title" value="<%= todo.title %>" placeholder="">
            </div>
            <div class="form-group">
                  <label for="email" class="text-light">Decription</label>
                  <input type="text" name="description" value="<%= todo.description %>" placeholder="">
            </div>
            <div class="form-group">
                  <label for="completed" class="text-light">Completed</label>
                  <input type="text" name="completed" value="<%= todo.completed %>" placeholder="True/False">
            </div>
           
            <div class="form-group">
                  <button type="submit" class="btn text-dark update">Save</button>
            </div>
      </div>
 </form>
 <!-- Form handling -->
      </div>  
  </main>
<!-- Main Site -->



